@model Khati.Models.ViewModels.CustomerVM
@{
    ViewBag.Title = "Edit Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fa fa-edit"></i> Edit Customer</h3>
        </div>
        <div class="card-body">
            @using (Ajax.BeginForm("Edit", "Customer", new AjaxOptions
            {
                HttpMethod = "POST",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "msg",
                OnSuccess = "onEditSuccess",
                OnFailure = "onEditFailure"
            }, new { enctype = "multipart/form-data", @class = "needs-validation", novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.CustomerId)

                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-secondary">Customer Info</h5>
                        <hr />

                        <div class="mb-3">
                            @Html.LabelFor(x => x.CustomerName, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.CustomerName, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(x => x.Phone, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(x => x.DateOfPurchase, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(x => x.DateOfPurchase, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            @Html.ValidationMessageFor(x => x.DateOfPurchase, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(x => x.Age, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Age, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(x => x.PictureFile, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(x => x.PictureFile, new { @class = "form-control", @type = "file" })
                            @if (!string.IsNullOrEmpty(Model.Picture))
                            {
                                <div class="mt-2">
                                    <img src="@Url.Content(Model.Picture)" width="70" class="rounded shadow" alt="Customer Picture" />
                                </div>
                            }
                            @Html.ValidationMessageFor(x => x.PictureFile, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-check mb-3">
                            @Html.CheckBoxFor(x => x.IsMember, new { @class = "form-check-input" })
                            @Html.LabelFor(x => x.IsMember, new { @class = "form-check-label fw-bold" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(x => x.TotalPrice, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(x => x.TotalPrice, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.TotalPrice, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5 class="text-secondary">Fish Purchases</h5>
                        <hr />
                        <div class="d-flex justify-content-end mb-2">
                            <a href="#" id="btnAddFish" class="btn btn-outline-primary btn-sm"><i class="fa fa-plus-circle"></i> Add Fish</a>
                        </div>
                        <div id="fishContainer">
                            @{
                                int fishIndex = 0;
                                foreach (var fishId in Model.SelectedFishIds)
                                {
                                    @Html.Action("AddNewFishRow", "Customer", new { index = fishIndex, selectedId = fishId })
                                    fishIndex++;
                                }
                            }
                        </div>

                        <h5 class="text-secondary mt-4">Vegetable Purchases</h5>
                        <hr />
                        <div class="d-flex justify-content-end mb-2">
                            <a href="#" id="btnAddVegetable" class="btn btn-outline-success btn-sm"><i class="fa fa-plus-circle"></i> Add Vegetable</a>
                        </div>
                        <div id="vegetableContainer">
                            @{
                                int vegIndex = 0;
                                foreach (var vegetableId in Model.SelectedVegetableIds)
                                {
                                    @Html.Action("AddNewVegetableRow", "Customer", new { index = vegIndex, selectedId = vegetableId })
                                    vegIndex++;
                                }
                            }
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-success px-4"><i class="fa fa-save"></i> Save Changes</button>
                    <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary ms-2 px-4"><i class="fa fa-times"></i> Cancel</a>
                </div>
                <div id="msg" class="mt-3"></div>
            }
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
        $(function () {
            var fishCounter = $('#fishContainer > .fish-row').length;
            var vegCounter = $('#vegetableContainer > .vegetable-row').length;

            $('#btnAddFish').click(function (e) {
                e.preventDefault();
                $.get('@Url.Action("AddNewFishRow", "Customer")', { index: fishCounter }, function (data) {
                    $('#fishContainer').append(data);
                    fishCounter++;
                });
            });

            $('#btnAddVegetable').click(function (e) {
                e.preventDefault();
                $.get('@Url.Action("AddNewVegetableRow", "Customer")', { index: vegCounter }, function (data) {
                    $('#vegetableContainer').append(data);
                    vegCounter++;
                });
            });

            window.onEditSuccess = function (data) {
                if (data.success) {
                    $('#msg').html('<div class="alert alert-success">' + data.message + '</div>');
                    setTimeout(function () { window.location.href = '@Url.Action("Index", "Customer")'; }, 2000);
                } else {
                    $('#msg').html('<div class="alert alert-danger">' + data.message + '</div>');
                }
            };

            window.onEditFailure = function () {
                $('#msg').html('<div class="alert alert-danger">An error occurred while updating the customer.</div>');
            };

            $('#fishContainer').on('click', '.remove-fish-row', function (e) {
                e.preventDefault();
                $(this).closest('.fish-row').remove();
            });

            $('#vegetableContainer').on('click', '.remove-vegetable-row', function (e) {
                e.preventDefault();
                $(this).closest('.vegetable-row').remove();
            });
        });
    </script>
}
