@model Khati.Models.Vegetable

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Vegetable</h2>

<h3>Are you sure you want to delete this vegetable?</h3>
<div>
    <h4>Vegetable Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.VegetableName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VegetableName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>

        <dt>
            Picture
        </dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.Picture))
            {
                <img src="@Url.Content(Model.Picture)" alt="Vegetable Picture" style="width:100px; height:100px;" />
            }
            else
            {
                <span>No Picture</span>
            }
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color mt-3">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ms-2" })
        </div>
    }
</div>

